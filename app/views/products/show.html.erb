<% title "Product" %>

<p>
  <strong>Title:</strong>
  <%=h @product.title %>
</p>
<p>
  <strong>Description:</strong>
  <%=h @product.description %>
</p>
<p>
  <strong>Price:</strong>
  <%=h @product.price %>
</p>
<p>
  <strong>Photo:</strong>
  <%= image_tag @product.photo.url %>
</p>

<p>
  <%= link_to "Edit", edit_product_path(@product) %> |
  <%= link_to "Destroy", @product, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", products_path %>
</p>


<%= render :partial => "comments/comment_list" %>

<%= render :partial => "comments/new", :locals => {:reply_to => @product.comments, :comment => @comment} %>

