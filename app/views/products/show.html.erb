<% title "Product" %>

<p>
  <strong>Title:</strong>
  <%=h @product.title %>
</p>
<p>
  <strong>Description:</strong>
  <%=h @product.description %>
</p>
<p>
  <strong>Price:</strong>
  <%=h @product.price %>
</p>
<p>
  <strong>Photo:</strong>
  <%= image_tag @product.photo.url %>
</p>

<p>
  <%= link_to "Edit", edit_product_path(@product) %> |
  <%= link_to "Destroy", @product, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", products_path %>
</p>

<h2>Comments</h2>
<div id="comments">
<%= render :partial => "products/comment", :locals => { :product => @product, :comments => @product.comments} %>
</div>
<%= link_to 'New comment', new_product_comment_path(@product, :reply_to => @product.comments.first) %>
