<% title "Products" %>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
    <th>Photo File Name</th>
    <th>Photo Content Type</th>
    <th>Photo File Size</th>
    <th>Photo Updated At</th>
  </tr>
  <% for product in @products %>
    <tr>
      <td><%=h product.title %></td>
      <td><%=h product.description %></td>
      <td><%=h product.price %></td>
      <td><%=h product.photo_file_name %></td>
      <td><%=h product.photo_content_type %></td>
      <td><%=h product.photo_file_size %></td>
      <td><%=h product.photo_updated_at %></td>
      <td><%= link_to "Show", product %></td>
      <td><%= link_to "Edit", edit_product_path(product) %></td>
      <td><%= link_to "Destroy", product, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Product", new_product_path %></p>
