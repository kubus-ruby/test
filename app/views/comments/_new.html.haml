- form_remote_for [comment.product, comment] do |f|
  = f.error_messages
  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.label "text"
    %br
    = f.text_area :body, :rows => 5, :cols => 35
  %p
    - reply_to ||= comment.product.comments.first.id
    = f.hidden_field :parent_id, :value => reply_to
  %p
    = f.submit 'Create'
