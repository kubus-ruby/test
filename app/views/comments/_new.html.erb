<% form_remote_for [@product, @product.comments.new] do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label "text" %><br/>
    <%= f.text_area :body, :rows => 5, :cols => 35 %>
  </p>
  <p>
    <%= f.hidden_field :parent_id, :value => params[:reply_to] %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
