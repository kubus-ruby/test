<h1>Listing orders</h1>

<table>
  <tr>
    <th><%= order @search, :by => :name %></th>
    <th><%= order @search, :by => :address %></th>
    <th>Email</th>
    <th>Pay type</th>
  </tr>

<% form_for @search do |f| %>
<p>
	<%= f.label :name_like, "Name" %> </br>
	<%= f.text_area :name_like, :rows => 1%></br>
</p>
<p>
	<%= f.label :address_like, "Address" %> </br>
	<%= f.text_area :address_like, :rows => 1%></br>
</p>
<p>
	<%= f.label :pay_type, "Payment type" %> </br>
	<%= f.select :pay_type, Order::PAYMENT_TYPES, :include_blank => true %></br>
</p>
<p>
	<%= f.submit "search" %>
</p>

<% end %>

<% @orders.each do |order| %>
  <tr>
    <td><%=h order.name %></td>
    <td><%=h order.address %></td>
    <td><%=h order.email %></td>
    <td><%=h order.pay_type %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New order', new_order_path %>
